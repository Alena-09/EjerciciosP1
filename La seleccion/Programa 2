
#include<stdio.h>
#include<math.h>

int main()
{
	
	int x, y;
	
	printf("Dame el valor de X: ");
	scanf("%d",&x);
	
	if(x>=0)
	{
		y = pow(x,2)+6;		//el pow nos ayuda a elevar una variable y el numero despues de la coma indica hasta que tanto se va a elevar
		
		printf("El valor de Y es: %d",y);
	}
	else
	{
		y = (3*x)+6;
		
		printf("El valor de Y es: %d",y);
	}
	
	return 0;
}
