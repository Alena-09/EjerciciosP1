
#include<stdio.h>
#include<math.h>


int main()
{
	float calf1, calf2, calf3, prom;

	char name[48];

	printf("Dame el nombre del alumno: ");
	  gets(name);   //use el gets para que se pueda leer nombre con espacios y entre corchetes especifique cuantos caracteres admite

	printf("Dame la primera calificacion: ");
	  scanf("%f",&calf1);

	printf("Dame la segunda calificacion: ");
	  scanf("%f",&calf2);

	printf("Dame la tercera calificacion: ");
	  scanf("%f",&calf3);

	prom = (calf1 + calf2 +calf3)/3;

	if(prom>=7.0)
	{
		printf("Hola %s tu promedio es: %.2f\n APROBASTE!",name,prom);
	}
	else
	{
		printf("Hola %s tu promedio es: %f\n NA!",name,prom);
	}

	return 0;
}
