
#include<stdio.h>
#include<math.h>


int main()
{
	float radio, pi, area, volumen;

	pi  = 3.1416;

	printf("Dame el valor del radio: ");
	 scanf("%f",&radio);

	area = (4* pi)*pow(radio,2);

	volumen = ((4*pi)*pow(radio,3))/3;

	printf("El area es: %f y el volumen es: %f",area,volumen);


	return 0;
}
